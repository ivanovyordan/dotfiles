# Settings
set nodrawbox
set icons
set nohidden
set info size
set ifs "\n"
set filesep "\n"


# Key bindings
map <esc> cmd-escape
map e $$EDITOR $fx
map D delete
map <c-y> up
map <c-e> down
map <enter> open
map <m-up>    up
map <m-down>  down
map R bulk-rename
map M push $mkdir<space>


# Preview
set previewer ~/.dotfiles/config/lf/.config/lf/scope-lf-wrapper.sh
map i $LESSOPEN='| ~/.dotfiles/config/lf/.config/lf/scope-lf-wrapper.sh %s' bat --paging=always $f


# Open
cmd open $set -f; rifle -p 0 $fx
cmd open-with ${{
    set -f
    rifle -l $fx
    read -p "Open with: " method
    rifle -p $method $fx
}}
map r open-with
